
PORT=3000
NODE_ENV=dev
MONGO_URI=

# JWT Authentication
# IMPORTANT: Generate a secure secret for production!
# Run: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=1073741824
# File size in bytes: 1GB = 1073741824, 500MB = 524288000, 100MB = 104857600

# Allowed Video MIME Types (comma-separated, no spaces)
ALLOWED_MIME_TYPES=video/mp4,video/webm,video/quicktime,video/x-msvideo

# Frontend URL (for CORS and Socket.io)
# Update this to match your frontend development URL
FRONTEND_URL=http://localhost:5173

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_BUCKET_NAME=
GEMINI_API_KEY=
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=
SUPER_ADMIN_JWT_SECRET=

